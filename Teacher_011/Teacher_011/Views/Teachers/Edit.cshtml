@model Teacher_011.ViewModel.TeacherEditModel
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-10">
        @using (Html.BeginForm("Edit", "Teachers", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.TeacherId)
            <h3 class="mb-2">Add new Teacher</h3>
            @Html.Partial("_TeacherEditPartial", Model)

            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>SubjectName</th>
                            <th>SubjcetTopic</th>
                            <th>NumberOfTopic</th>
                            <th>TeachingAbility</th>
                            <th>
                                <button type="submit" class="btn btn-secondary btn-sm" name="act" value="add" formnovalidate>Add</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Subjects.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.TextBoxFor(x => Model.Subjects[i].SubjectName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Subjects[i].SubjectName, "", new { @class = "text-danger" })

                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.Subjects[i].SubjcetTopic, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Subjects[i].SubjcetTopic, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.Subjects[i].NumberOfTopic, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Subjects[i].NumberOfTopic, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.Subjects[i].TeachingAbility, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.Subjects[i].TeachingAbility, "", new { @class = "text-danger" })
                                </td>
                                <th>
                                    <button type="submit" class="btn btn-secondary btn-sm" name="act" value="remove_@i" formnovalidate>Remove</button>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="form-group row mb-1">

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary" name="act" value="update">Save to database</button>
                </div>
            </div>
        }
    </div>
    <div class="col-2">

        <img src="~/Pictures/@ViewBag.CurrentPic" class="img-thumbnail" style="width:120px" />

    </div>
</div>
@section scripts {
    @Html.Partial("_scripts")
}


