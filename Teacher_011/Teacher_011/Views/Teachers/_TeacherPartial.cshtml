@model Teacher_011.ViewModel.TeacherViewModel
<div class="form-group row mb-1">
    @Html.LabelFor(x => x.TeacherName, new { @class = "col-form-label col-form-label-sm col-2" })
    <div class="col-6">
        @Html.TextBoxFor(x => x.TeacherName, new { @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(x => x.TeacherName, "", new { @class = "text-danger", style = "font-size:x-small" })
    </div>
</div>
